	<queryString><![CDATA[select padre.Id_Persona, estud.nombre1 estudn1, estud.nombre2 estudn2, estud.Apellido1 estuda1, estud.Apellido2 estuda2
     , padre.nombre1 padren1, padre.nombre2 padren2, padre.Apellido1 padrea1, padre.Apellido2 padrea2
		 , IFNULL(padre.Tipo_Documento, 'XXXX') padretdoc, IFNULL(padre.No_Documento, 'XXXX') padredoc, IFNULL(padre.Lugar_Expedicion_Municipio, 'XXXX') padreexpdoc
		 , IFNULL(padre.Direccion_Residencia, 'XXXX') padredir, IFNULL(padre.Telefono, 'XXXX') padretel, IFNULL(padre.Celular, 'XXXX') padrecel, IFNULL(padre.email, 'XXXX') padremail

     , IFNULL(madre.nombre1, '') madren1, IFNULL(madre.nombre2, '') madren2, IFNULL(madre.Apellido1, '') madrea1, IFNULL(madre.Apellido2, '') madrea2
		 , IFNULL(madre.Tipo_Documento, 'XXXX') madretdoc, IFNULL(madre.No_Documento, 'XXXX') madredoc, IFNULL(madre.Lugar_Expedicion_Municipio, 'XXXX') madreexpdoc
		 , IFNULL(madre.Direccion_Residencia, 'XXXX') madredir, IFNULL(madre.Telefono, 'XXXX') madretel, IFNULL(madre.Celular, 'XXXX') madrecel, IFNULL(madre.email, 'XXXX') madremail

  	 , IFNULL(acud.nombre1, '') acudn1, IFNULL(acud.nombre2, '') acudn2, IFNULL(acud.Apellido1, '') acuda1, IFNULL(acud.Apellido2, '') acuda2
		 , IFNULL(acud.Tipo_Documento, 'XXXX') acudtdoc, IFNULL(acud.No_Documento, 'XXXX') acuddoc, IFNULL(acud.Lugar_Expedicion_Municipio, 'XXXX') acudexpdoc
		 , IFNULL(acud.Direccion_Residencia, 'XXXX') acuddir, IFNULL(acud.Telefono, 'XXXX') acudtel, IFNULL(acud.Celular, 'XXXX') acudcel, IFNULL(acud.email, 'XXXX') acudmail

     , g.grado
  from persona estud 
       left join persona padre on padre.Grupo_Familiar_ID_Grupo_Familiar = estud.Grupo_Familiar_ID_Grupo_Familiar and padre.Tipo_Persona_Id_Tipo_Persona = 2 and padre.Activo_Retirado = 1
       left join persona madre on madre.Grupo_Familiar_ID_Grupo_Familiar = estud.Grupo_Familiar_ID_Grupo_Familiar and madre.Tipo_Persona_Id_Tipo_Persona = 12 and madre.Activo_Retirado = 1
			 left join persona acud on acud.Grupo_Familiar_ID_Grupo_Familiar = estud.Grupo_Familiar_ID_Grupo_Familiar and acud.Tipo_Persona_Id_Tipo_Persona = 3 and acud.Activo_Retirado = 1
		 , insc_alum_curso ic, curso c, grado g
		 , Area /*tabla para hacer dos paginas obligatorias en el reporte*/
where 1=1

  and estud.Id_Persona = $P{idPersona} /*194*/
  and ic.Persona_Id_Persona = estud.id_persona
  and ic.Curso_Id_Curso = c.Id_Curso 
  and c.Grado_id_grado = g.Id_Grado
  LIMIT 0, 2]]></queryString>

